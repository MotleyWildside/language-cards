{
  "name": "cards",
  "version": "1.0.0",
  "description": "Full-stack application",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "installDependencies": "concurrently \"npm run installDependencies:backend\" \"npm run installDependencies:frontend\"",
    "installDependencies:backend": "cd backend && npm install",
    "installDependencies:frontend": "cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}

